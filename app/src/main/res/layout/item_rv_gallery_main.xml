<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_gallery_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bridget" />

    <TextView
        android:id="@+id/priceText_onImage_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/image_gallery_main"
        android:layout_alignTop="@+id/image_gallery_main"
        android:layout_alignEnd="@+id/image_gallery_main"
        android:layout_margin="5dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="7000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic"
        android:visibility="invisible" />

    <ImageButton
        android:layout_toStartOf="@id/null_view"
        android:id="@+id/onImage_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/blackTransparent"
        android:scaleType="center"
        android:src="@drawable/ic_favorite_border_white_24dp"
        android:visibility="invisible" />

    <View
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:id="@+id/null_view"
        android:layout_width="8dp"
        android:layout_height="1dp"/>

    <ImageButton
        android:id="@+id/onImage_fullScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/null_view"
        android:background="@color/blackTransparent"
        android:scaleType="center"
        android:src="@drawable/ic_fullscreen_white_24dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/shopNameText_onImage_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_gallery_main"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="end|bottom"
        android:text="New Yorker"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic|bold"
        android:visibility="invisible" />

</RelativeLayout>